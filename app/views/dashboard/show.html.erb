<div class="profile">
    <div class="container">
        <div class="row">
    
            <div class="col-12 mt-5">
                <div class="row">
                    <div class="col-12 d-flex justify-content-center">
                        <img src="/img.png" class="avatar-image" style="">
                        <% image_tag(@user.avatar, class:"avatar-image") if @user.avatar.attached? %>
                    </div>
                    <div class="col-12 d-flex justify-content-center">
                        <h2><%= @user.full_name %></h2>
                    </div>
                    <div class="col-12 d-flex justify-content-center">
                        <p><%= @user.body %></p>
                    </div>
                    <div class="col-12 d-flex justify-content-center">
                        <p><%= mail_to @user.email, '連絡先' %></p>
                    </div>
                    
                    
                </div>
            </div>
    
        </div>
    </div>
</div>