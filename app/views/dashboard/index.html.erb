<div class="container session-manager-container">
  <h2 class="session-manager-header">Dashboard#index</h2>
    
    <div class="row">
        <div class="col-12">
            <%= link_to "new post", new_post_path, class: "btn btn-primary mb-5" %>

            <table>
                <thead>
                    <tr>
                        <th>投稿者名</th>
                        <th>タイトル</th>
                        <th>本文</th>
                    </tr>
                </thead>
                <tbody>
                    <% @posts.each do |post| %>
                        <tr>
                            <td><%= link_to post.user.id, user_path(post.user.id), class: "" %></td>
                            <td><%= link_to post.title, post, class: "nav-link" %></td>
                            <td><%= post.body %></td>

                            <% if current_user %>
                            <td>
                                <% if current_user.likes.exists?(post_id: post.id) %>
                                  <i class="fas fa-bookmark"></i>
                                <% else %>
                                  <%= link_to post_likes_path(post), method: :post do %>
                                    <i class="far fa-bookmark"></i>
                                  <% end %>
                                <% end %>
                            </td>
                            <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        
        </div>
    </div>
    
</div>